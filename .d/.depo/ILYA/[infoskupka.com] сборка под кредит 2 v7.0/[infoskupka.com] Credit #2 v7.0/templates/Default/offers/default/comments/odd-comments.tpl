[tree-start]
<table width="100%" border="0" cellspacing="0" cellpadding="0">
	<tr>
		<td width="{nbsp}px">&nbsp;</td>
		<td width="10px" align="right" valign="top">&nbsp;</td>
		<td valign="top">
[/tree-start]
			<div class="BoardBackgroundCom">
			<table cellspacing="0" cellpadding="0" class="comments">
				<tr>
					<td class="BoardDate">
						<img src="{THEME}/board/style/author.gif" border="0" align="absmiddle" alt="Автор" />&nbsp;
						{author}, {date}
					</td>
				</tr>
				<tr>
					<td>
						<table cellspacing="0" cellpadding="0" class="comments-text">
							<tr>
								[not-del]
								<td class="foto">
									<img src="{foto}" alt="" />
								</td>
								[/not-del]
								<td class="text">
									{comment}
									[not-del]
									<div class="edit-com BoardDate">
										[fast]Цитировать[/fast]
										[comm-answer]| Ответить[/comm-answer]
										[com-del]| Удалить[/com-del]
										[com-edit]| Изменить[/com-edit]
									</div>
									[/not-del]
								</td>
							</tr>
						</table>
					</td>
				</tr>
			</table>
			</div>
[tree-end]
		</td>
	</tr>
</table>
[/tree-end]