<div class="comments-items">
	<div class="comm-item">
		<div class="comm-left">
			<img src="{foto}" alt="{login}"/>
			<div class="clr"></div>
			<span class="comm-group" title="Пользователь оффлайн">{group-name}</span>
			
			
		</div>
		<div class="comm-right">
			<div class="comm-wrap">
				<div class="comm-line">
					<div class="comm-author">Автор: {author} </div>
					<div class="comm-date">{date}</div>
					<div class="like-dislike">
					[rating-plus]<i title="Нравится" class="icon-smile"></i>[/rating-plus]
					{rating}
					[rating-minus]<i title="Не нравится" class="icon-frown"></i>[/rating-minus]
				</div>
				[/rating-type-3]
				</div>
				<div class="comm-text">
					{comment}
				</div>
				<ul class="comm-menu">
					<li>[reply]Ответить на комментарий[/reply]</li>
					<li>[fast]Цитировать[/fast]</li>
					[group=1]
					<li>[spam]Спам[/spam]</li>
					<li>[com-edit]Редактировать[/com-edit]</li>
					<li>[com-del]Удалить[/com-del]<li>
					<li>{mass-action}</li>
					[/group]
				</ul>
			</div>
			
		</div>
	</div>
</div>
  
