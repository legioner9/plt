in_arr=${ARGS0}

flag_item=${ARGS1}

ptr_path=${ARGS2}

ptr_path=$(${_abs_path} $PPWD "ptr_path") #ptr args

dr2parr_fn_() {
    local arg1="$1"
    for item in $(da2e ${arg1}); do
        local path_item="${arg1}/${item}"

        if [ -f "${path_item}" ]; then

            if [ ${flag_item:-10} -eq 0 ]; then
                in_parr_add="${path_item}"
            fi

            if [ ${flag_item:-10} -eq 1 ]; then
                eval rel_path=\${path_item#$ptr_path/}
                in_parr_add="${rel_path}"
            fi

            if [ ${flag_item:-10} -eq 2 ]; then
                in_parr_add="$(prs_f -ne "${path_item}")"
            fi

            if [ ${flag_item:-10} -eq 3 ]; then
                in_parr_add="$(prs_f -n "${path_item}")"
            fi

            eval ${in_arr}+=\(\$in_parr_add\)
        fi

        if [ -d "${path_item}" ]; then
            dr2parr_fn_ "${path_item}"
        fi
    done
}
# echo -e "${HLIGHT}--- dr2parr_fn_ ${ptr_path} ---${NORMAL}" #start files
dr2parr_fn_ ${ptr_path}

