        if ! grep -w ${tag_to_add} ${arb_}/${ram_}.ram/tags.fol &>/dev/null; then
            # echo -e "\n${tag_to_add}" >>${arb_}/${ram_}.ram/tags.fol

            if ! "${_ins_last_s}" ${arb_}/${ram_}.ram/tags.fol ${tag_to_add}; then
                plt_info "in in fol_() : EXEC_FAIL : ${_ins_last_s} ${arb_}/${ram_}.ram/tags.fol ${tag_to_add}"
