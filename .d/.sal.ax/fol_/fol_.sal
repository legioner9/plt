        arr2=($(cat ${arb_}/all_unique_tags.lst))

        echo "exist tags in ${arb_}/${ram_}.ram/tags.fol:"
        echo "start-----------"
        "${_f2e}" ${arb_}/${ram_}.ram/tags.fol
        echo "end-------------"

        PS3="eligendi actiones tag (ram_='${ram_}') to insert to file://${arb_}/${ram_}.ram/tags.fol: "
        select item5 in "${arr2[@]}"; do
            tag_to_add=${item5}
            break
